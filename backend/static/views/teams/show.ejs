<%- include("../layout/header") %>
<body class="text-gray-900">
  <a href="/teams" class="inline-block mt-4 text-gray-800 font-semibold ml-10 text-xl">
    &lt; Volver
  </a>

  <% if (success) { %>
    <div
      id="flash-message"
      class="mx-auto max-w-xs text-center rounded-md mb-4 p-4 bg-green-100 text-green-800"
    >
      <p class="font-semibold"><%= success %></p>
    </div>
    <script>
      setTimeout(() => {
        const msg = document.getElementById('flash-message');
        if (msg) msg.remove();
      }, 5000);
    </script>
  <% } %>
  
  <div class="min-h-screen">
    <div class="container mx-auto p-12 bg-gray-100 mt-8 max-w-xl rounded-md">
        <div class="flex">
          
          <div class="flex-shrink-0 mr-6">
        
            <% if (equipo.foto) { %>
              <img
                src="<%= equipo.foto %>"
                alt="Logo de <%= equipo.nombre %>"
                class="w-48 h-48 object-cover"
              >
            <% } else { %>
            
            <img src="/uploads/user_placeholder.png" alt="Logo por defecto" class="w-48 h-48 bg-gray-400 flex items-center justify-center text-white text-2xl">
            
            
            <% } %>
          
          </div>

          <div class="space-y-2">
            <h1 class="text-3xl font-bold text-gray-800 mb-4">
              <%= equipo.nombre %>
              <span class="ml-1 text-sm">(ID <%= equipo.id %>)</span>
            </h1>
            <p><strong>Límite Miembros:</strong> <%= equipo.limite_miembros %></p>
            <p><strong>Premium:</strong> <%= equipo.premium ? "Sí" : "No" %></p>
          </div>
        </div>
      </div>
    </div>
  

  <%- include("../layout/footer") %>
</body>
