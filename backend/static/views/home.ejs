<%- include('layout/header') %>

<body class="text-gray-900">
  <div class="container mx-auto p-8 text-center min-h-screen">
    <h1 class="text-8xl font-bold text-gray-800 mb-4 mt-20">TACTIX</h1>
    <h1 class="text-2xl font-semibold text-gray-800 mb-10">BACKOFFICE</h1>
    <% if (user) { %>
      <p class="text-lg mb-8">Usuario identificado como <span class="font-semibold"><%= user.nombre || user.email %></span></p>
      <form action="/logout" method="POST">
          <button type="submit" class="bg-yellow-400 text-gray-800 p-5 px-6 text-2xl rounded-full hover:bg-yellow-300 transition font-semibold rounded">Cerrar Sesión</button>
        </form>
    <% } else { %>
      <a href="/login" class="bg-yellow-400 text-gray-800 p-5 px-6 text-2xl rounded-full hover:bg-yellow-300 transition font-semibold rounded">Iniciar Sesión</a>
    <% } %>
  </div>
  
  <%- include('layout/footer') %>
</body>
